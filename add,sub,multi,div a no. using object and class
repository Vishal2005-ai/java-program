import java.io.*;
public class Numbers {
    private int a;
    private int b;
    public void sum() {
        System.out.println(a + b);
    }
    public void sub() {
        System.out.println(a - b);
    }
    public void multiply() {
        System.out.println(a * b);
    }
    public void divide() {
        if (b != 0) {
            System.out.println(a / b);
        } else {
            System.out.println("Division by zero is not allowed");
        }
    }

    public static void main(String args[]) {
        Numbers obj = new Numbers();
        obj.a = 10;
        obj.b = 2;

        obj.sum();        
        obj.sub();        
        obj.multiply();   
        obj.divide();     
    }
}
output:
12
8
20
5
